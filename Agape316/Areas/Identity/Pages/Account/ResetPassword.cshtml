@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

@{
    Layout = "~/Areas/Identity/Pages/_ResetPasswordLayout.cshtml";
}

<h2>Reset your password.</h2>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="w-100 text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating mb-12">
                <input asp-for="Input.Email" class="w-100 form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="w-100 form-label"></label>
                <span asp-validation-for="Input.Email" class="w-100 text-danger"></span>
            </div>
            <div class="form-floating mb-12">
                <input asp-for="Input.Password" class="w-100 form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password" class="w-100 w-100 form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-12">
                <input asp-for="Input.ConfirmPassword" class="w-100 form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword" class="w-100 form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="w-100 text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary margin-top-bottom">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
