@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

@{
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<header>    
    @{
        if (User?.Identity?.IsAuthenticated ?? false)
        {
            <form class="text-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-primary text-light">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
