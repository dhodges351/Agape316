@model Agape316.Models.EventModel
@using Agape316.Enums

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewData["Title"] = "Event Details";
}

<style>
    .form-group-label {
        font-weight: bold;
    }
</style>

<p style="height:100px;">
</p>
<div class="container-xxl py-6 mx-3">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class ="form-group-label">Title:</label>
                <label>@Model.Title</label>
            </div>
        </div>            
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Description:</label>
                <label>@Model.Description</label>
            </div>
        </div>            
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Location:</label>
                <label>@Model.Location</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Date/Time:</label>
                <label>@Model.EventDate.ToShortDateString() @Agape316.Helpers.EventHelpers.GetStandardTimeFromMilitaryTime(@Model.StartTime) - @Agape316.Helpers.EventHelpers.GetStandardTimeFromMilitaryTime(@Model.EndTime)</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Contact Email:</label>
                <label>@Model.ContactEmail</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Category:</label>
                <label>@Model.Category</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Sandwich Slots:</label>
                <label>@Model.SandwichSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Side Dish Slots:</label>
                <label>@Model.SideDishSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Main Dish Slots:</label>
                <label>@Model.MainDishSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Dessert Slots:</label>
                <label>@Model.DessertSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Set Up Slots:</label>
                <label>@Model.SetUpSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Serve Slots:</label>
                <label>@Model.ServeSlots</label>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Clean Up Slots:</label>
                <label>@Model.CleanUpSlots</label>
            </div>
        </div>
    </div>
    
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="form-group">
                <label class="form-group-label">Event Photo:</label>
                <img src="@Model.ImageUrl" height="50" width="50"/>
            </div>
        </div>
    </div>
</div>


