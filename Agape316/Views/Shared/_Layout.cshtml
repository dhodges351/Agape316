    <script>
        var fileSize = 0;
        var filePath = '';        

        // Allowed file types
        var allowedExtensions = /(\.jpg|\.jpeg|\.png|\.gif)$/i;

        function checkFile(page) {
            event.preventDefault();

            if (filePath == "") {
                alert("Please select an image file.");
                return false;
            }

            if (fileSize > 1) {
                alert("File must be less than or equal to 1000KB.");
                return false;
            }

            if (!allowedExtensions.exec(filePath)) {
                alert('Invalid file type, valid file types are: jpg, jpeg, png, gif.');
                $("#txtFile").val("");
                return false;
            }

            if (page == 'Profile') {
                $("#uploadForm").submit();
            }
            else if (page == 'CreateTopic') {
                $("#createForumForm").submit();
            }
        }

        $('#txtFile').on('change', function () {
            fileSize = (this.files[0].size / 1024 / 1024).toFixed(2);
            filePath = $("#txtFile").val();
        });


        $(function () {
            $('#planEventModal').on('hidden.bs.modal', function () {
                // Clears fields in Event modal for new Event.
                window.location.reload();
            });
        });

        $(function () {
            $('#eventDishModal').on('hidden.bs.modal', function () {
                window.location = "/";
            });
        });       

        function GetSelectedEvent(el)
        {
            var selectedId = parseInt(el.value);
            var eventDate = $("#hidEventDate").val();
            $.ajax({
                type: "GET",
                url: "/EventDish/OnGetCallEventDishViewComponent",
                data: { "eventId": selectedId },
                success: function (response) {
                    $("#eventDishModal").find(".modal-body").html(response);
                    $("#eventDishModal").modal('show');
                    $("#eventContainer").show();
                    $('#EventId').val(selectedId);
                    $('#EventDate').val(eventDate);
                },
                failure: function (response) {
                    alert('Get Event Dish details failed');
                },
                error: function (response) {
                    alert('Error getting Event Dish details');
                }
            });
        }       

        function checkHasInvalidSlot()
        {
            event.preventDefault();
            if ($("#HasInvalidSlot").val() == "True") {
                alert('Please check available Event slots.');
                return false;
            }      
            else
            {
                $("#eventDishForm").submit();
            }
        }        

        function CheckEventSlot(el) {
            var eventId = $("#EventId").val();
            if ($("#EventId").val() == "") {
                return;
            }
            else
            {                
                $.ajax({
                    type: "POST",
                    url: "/EventDish/CheckEventSlot",
                    data: { "eventId": eventId, "slotName": el.id, "slotQuantity": el.value },
                    success: function (response) {
                        $("#HasInvalidSlot").val(response.data.Message);
                    },
                    failure: function (response) {
                        alert('Check Event slot failed');
                    },
                    error: function (response) {
                        alert('Error checking Event slot');
                    }
                });
            }            
        }
    </script>
