@model Agape316.Models.EventModel
@using Agape316.Enums       

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}
<p style="height:95px;">
</p>
<div class="container-xxl" style="background-color:tan;"> 
    <br />
    <div class="row text-center"><h3>Create Event</h3></div>
    <div class="row align-items-center">
        <div class="col-md-12" style="padding-left:100px;padding-right:100px;">
            <form asp-controller="Event" asp-action="AddEditEvent" method="post" id="eventForm" enctype="multipart/form-data" onsubmit="return checkCategory();">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Event title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="Write a brief description here.">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location">Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Event Location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactEmail">Email</label>
                    <input asp-for="ContactEmail" class="form-control" placeholder="ContactEmail" />
                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EventDate">Event Date</label>
                    <input asp-for="EventDate" class="form-control" placeholder="Event Date" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartTime">Start Time</label>
                    <input asp-for="StartTime" id="evStartTime" class="form-control" placeholder="Start Time" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTime">End Time</label>
                    <input asp-for="EndTime" id="evEndTime" class="form-control" placeholder="End Time" onchange="checkEndTime()" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Category">Category</label>
                    @Html.DropDownListFor(m => m.Category,
                    new SelectList(Enum.GetValues(typeof(CategoryEnum))),
                    "Select Category")
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="SandwichSlots">Sandwich Slots</label>
                            <input asp-for="SandwichSlots" class="text-slots" min="0" step="any" type="number">
                        </div>
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="SideDishSlots">Side Dish Slots</label>
                            <input asp-for="SideDishSlots" class="text-slots" min="0" step="any" type="number">
                        </div>                                   
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="MainDishSlots">Main Dish Slots</label>
                            <input asp-for="MainDishSlots" class="text-slots" min="0" step="any" type="number">
                        </div>
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="DessertSlots">Dessert Slots</label>
                            <input asp-for="DessertSlots" class="text-slots" min="0" step="any" type="number">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="SetUpSlots">Set Up Slots</label>
                            <input asp-for="SetUpSlots" class="text-slots" min="0" step="any" type="number">
                        </div>
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="ServeSlots">Serve Slots</label>
                            <input asp-for="ServeSlots" class="text-slots" min="0" step="any" type="number">
                        </div>                   
                    </div>
                    <div class="row">                    
                        <div class="col-md-6">
                            <label class="label-slots-2" asp-for="CleanUpSlots">Clean Up Slots</label>
                            <input asp-for="CleanUpSlots" class="text-slots" min="0" step="any" type="number">
                        </div>
                    </div>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Notes">Notes</label>
                    <textarea asp-for="Notes" rows="3" class="form-control" placeholder="(Special instructions, ingredients, allergies, etc.)."></textarea>
                </div>
                <div id="upload" class="form-group my-2">
                    <div class="row">
                        <div class="col-md-12 text-center">                        
                            <label class="btn btn-default btn-file">
                                Select Image File <input type="file" name="Upload" style="display:none;" />
                            </label>
                        </div>                   
                    </div>
                    <div class="row">                   
                        <div class="col-md-12 text-center">                       
                            <button type="submit" id="eventSaveBtn" class="btn btn-submitEvent" onclick="return checkNoSubmit();">Submit</button>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="display:none;">
                    <input asp-for="Id" class="form-control" />
                    <input asp-for="ImageUrl" class="form-control"  />
                </div>
            </form>
            <br />
            <br />
        </div>
    </div>
</div>